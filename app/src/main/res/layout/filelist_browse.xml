<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:paddingTop="2dp" android:paddingBottom="2dp" android:layout_width="match_parent" android:layout_height="match_parent">
    <ImageView android:id="@+id/filelist_icon" android:paddingRight="4dp" android:layout_width="48dp" android:layout_height="48dp" android:contentDescription="@null"/>
    <TextView android:textSize="16sp" android:textStyle="bold" android:id="@+id/filelist_name" android:paddingTop="8dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_toRightOf="@+id/filelist_icon" android:layout_alignParentTop="true" android:textIsSelectable="false"/>
    <TextView android:textSize="12sp" android:id="@+id/filelist_size" android:paddingBottom="5dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_toRightOf="@+id/filelist_icon" android:layout_below="@+id/filelist_name" android:layout_alignParentBottom="true" android:textIsSelectable="false"/>
    <TextView android:textSize="12sp" android:gravity="right" android:id="@+id/filelist_time" android:paddingRight="25dp" android:paddingBottom="5dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_below="@+id/filelist_name" android:layout_alignBottom="@+id/filelist_size" android:layout_alignParentRight="true" android:textIsSelectable="false"/>
</RelativeLayout>
