<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scroll_id"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:scrollbars="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusableInTouchMode="true"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingBottom="@dimen/activity_vertical_margin">

        <CheckBox
            android:id="@+id/getarc_testarchived"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:text="@string/arcopt_test" />

        <CheckBox
            android:id="@+id/getarc_separatearc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/getarc_testarchived"
            android:layout_alignParentLeft="true"
            android:text="@string/arcopt_separate_arc" />

        <CheckBox
            android:id="@+id/getarc_blake2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/getarc_separatearc"
            android:layout_alignParentLeft="true"
            android:text="@string/arcopt_blake2" />

        <CheckBox
            android:id="@+id/getarc_showtime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/getarc_blake2"
            android:layout_alignParentLeft="true"
            android:text="@string/arcopt_show_time" />

        <CheckBox
            android:id="@+id/getarc_genarcname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/getarc_showtime"
            android:layout_alignParentLeft="true"
            android:text="@string/arcopt_generate_arcname" />

        <EditText
            android:id="@+id/getarc_arcnamemask"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/getarc_genarcname"
            android:layout_alignParentLeft="true"
            android:ems="10"
            android:imeOptions="actionDone"
            android:inputType="textUri" />
    </RelativeLayout>
</ScrollView>
