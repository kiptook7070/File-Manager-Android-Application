<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="5dp"/>
            <gradient android:startColor="#ffd8d8d8" android:endColor="#ffd8d8d8" android:angle="270" android:centerY="0.5" android:centerColor="#ffdddddd"/>
        </shape>
    </item>
    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <corners android:radius="5dp"/>
                <gradient android:startColor="@color/primaryColor" android:endColor="@color/primaryLightColor" android:angle="90"/>
            </shape>
        </clip>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="5dp"/>
                <gradient android:startColor="@color/primaryColor" android:endColor="@color/primaryLightColor" android:angle="90"/>
            </shape>
        </clip>
    </item>
</layer-list>
